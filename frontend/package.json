{
  "name": "photonics-publishing-intelligence-frontend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "electron .",
    "package:win": "vite build && electron-builder --win nsis --publish never",
    "package:win:signed": "vite build && electron-builder --win nsis --publish never -c.forceCodeSigning=true",
    "package:win:corp": "vite build && electron-builder --win nsis msi --publish never -c.forceCodeSigning=true",
    "package:mac:signed": "vite build && electron-builder --mac dmg zip --publish never -c.forceCodeSigning=true"
  },
  "dependencies": {
    "plotly.js-dist-min": "2.35.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-plotly.js": "2.6.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@electron/notarize": "^2.5.0",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "@vitejs/plugin-react": "4.3.1",
    "autoprefixer": "^10.4.24",
    "electron": "^34.3.0",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "5.6.3",
    "vite": "5.4.10"
  },
  "build": {
    "appId": "com.photonics.trends",
    "productName": "Photonics Trends",
    "asar": true,
    "afterSign": "electron/notarize.cjs",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../backend/dist/photonics-backend.exe",
        "to": "backend/photonics-backend.exe"
      }
    ],
    "win": {
      "signAndEditExecutable": true,
      "signingHashAlgorithms": [
        "sha256"
      ],
      "target": [
        "nsis"
      ],
      "artifactName": "Photonics-Trends-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
